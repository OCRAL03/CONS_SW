    <%= f.label :name, 'Nombre' %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Nombre del Administrador' %>
  </div>

  <div class="form-group">
    <%= f.label :email, 'Email' %>
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email del Administrador' %>
  </div>

  <% if f.object.new_record? %>
    <div class="form-group">
      <%= f.label :password, 'Contrase単a' %>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Contrase単a' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Confirmar Contrase単a' %>
      <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmar Contrase単a' %>
    </div>
  <% end %>

  <%= f.submit class: 'btn btn-primary' %>
